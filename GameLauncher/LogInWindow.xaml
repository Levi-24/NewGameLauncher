<Window x:Class="GameLauncher.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="500" Width="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Username:" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" FontSize="24"/>
        <TextBox Name="txtUsername" Height="45" VerticalAlignment="Center" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,0,10,0" FontSize="24"/>

        <TextBlock Text="Password:" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="1" FontSize="24"/>
        <PasswordBox Name="txtPassword" Height="45" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,10,0" FontSize="24"/>

        <TextBlock Text="Remember me:" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="2" FontSize="24" Grid.ColumnSpan="2"/>
        <CheckBox Name="chkRemember" VerticalAlignment="Top" Grid.Row="2" Margin="30,56,95,0" Height="20" Grid.Column="1"/>

        <Button Content="Login" Width="130" Height="49" VerticalAlignment="Center" HorizontalAlignment="Center" Click="Login_Click" Grid.Row="3" FontSize="24"/>
        <Button Content="Register" Width="130" Height="49" VerticalAlignment="Center" HorizontalAlignment="Center" Click="Register_Click" Grid.Column="2" Grid.Row="3" FontSize="24"/>
    </Grid>
</Window>
