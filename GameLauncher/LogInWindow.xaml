<Window x:Class="GameLauncher.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="600">
    <Grid>
        <TextBlock Text="Username:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,31,0,0"/>
        <TextBox Name="txtUsername" Width="400" Height="30" VerticalAlignment="Top" Margin="90,24,110,0"/>
        <TextBlock Text="Password:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,76,0,0"/>
        <PasswordBox Name="txtPassword" Width="200" Height="30" VerticalAlignment="Top" Margin="90,74,310,0"/>
        <CheckBox Name="chkRemember" Content="Remember Me" VerticalAlignment="Top" Margin="20,119,130,0"/>
        <Button Content="Login" Width="100" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="475,74,0,0" Click="Login_Click"/>
        <Button Content="Register" Width="100" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="340,74,0,0" Click="Register_Click"/>

    </Grid>
</Window>
