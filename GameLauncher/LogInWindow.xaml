<Window x:Class="GameLauncher.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="500" Width="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Username:" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" FontSize="24"/>
        <TextBox Name="txtUsername" Height="45" VerticalAlignment="Center" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,0,10,0" FontSize="24"/>

        <TextBlock Text="Password:" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="1" FontSize="24"/>
        <PasswordBox Name="txtPassword" Height="45" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,10,0" FontSize="24"/>

        <CheckBox Content="Remember me" Name="chkRemember" VerticalAlignment="Top" Grid.Row="2" Margin="10,49,75,0" Height="38" FontSize="24" Grid.ColumnSpan="2"/>

        <TextBlock x:Name="emailTxt" Text="E-mail:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,42,0,0" FontSize="24" Grid.Row="2" Visibility="Hidden"/>
        <TextBox x:Name="emailTxb" Height="45" VerticalAlignment="Top" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,42,10,0" FontSize="24" Grid.Row="2" Visibility="Hidden"/>


        <Button x:Name="logBtn" Content="Login" Width="130" Height="49" VerticalAlignment="Center" HorizontalAlignment="Center" Click="Login_Click" Grid.Row="3" FontSize="24"/>
        <Button x:Name="regBtn" Content="Register" Width="130" Height="49" VerticalAlignment="Center" HorizontalAlignment="Center" Click="Register_Click" Grid.Column="2" Grid.Row="3" FontSize="24" IsEnabled="False"/>
        <Button Content="ToRegister" Width="130" Height="49" VerticalAlignment="Center" HorizontalAlignment="Center" Click="ToRegister_Click" Grid.Column="1" Grid.Row="3" FontSize="24"/>
    </Grid>
</Window>
