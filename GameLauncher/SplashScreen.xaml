<Window x:Class="GameLauncher.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Loading..." Height="630" Width="1000" WindowStyle="None" 
        AllowsTransparency="True" Background="#1E1E1E" Topmost="True" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="Loading games, please wait..." 
                   Foreground="White"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   FontSize="24" />
        <ProgressBar IsIndeterminate="True" 
                     Background="#2E2E2E"
                     Foreground="White"
                     VerticalAlignment="Bottom" 
                     Height="20" 
                     Margin="10"/>
    </Grid>
</Window>