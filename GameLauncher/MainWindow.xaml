<Window x:Class="GameLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Launcher" Height="450" Width="800">
    <Grid>
        <ListView x:Name="GamesList" HorizontalAlignment="Left" Width="300" SelectionChanged="GamesList_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Game Name" DisplayMemberBinding="{Binding Name}" />
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel HorizontalAlignment="Right" Width="450" Margin="10">
            <Image x:Name="GameImage" Height="200" Margin="10" />
            <TextBlock x:Name="GameDescription" TextWrapping="Wrap" Margin="10" />
            <Button x:Name="LaunchButton" Content="Launch Game" Click="LaunchButton_Click" Margin="10" />
            <Button Content="Log Out" Click="LogOut_Click"/>
        </StackPanel>
        
        <TextBox x:Name="TestName" HorizontalAlignment="Left" Margin="70,281,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" FontSize="24"/>
    </Grid>
</Window>
