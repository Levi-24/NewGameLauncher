<Window 
    x:Class="GameLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Launcher" Height="600" Width="1000" Background="#1E1E1E" ResizeMode="NoResize">
    <Grid>
        <!-- Define Column Layout -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <StackPanel Grid.Column="0" Background="#252525" Margin="0">
            <TextBlock Text="Game Launcher" Foreground="White" FontSize="18" FontWeight="Bold" Margin="10"/>
            <Button Content="Profile" Click="ProfileButton_Click" Margin="10,5" Padding="10" Background="#333" Foreground="White"/>
            <Button Content="Review" Click="ReviewButton_Click" Margin="10,5" Padding="10" Background="#333" Foreground="White"/>
            <Button Content="Log Out" Click="LogOutButton_Click" Margin="10,5" Padding="10" Background="#FF3333" Foreground="White"/>
            
            <!-- Games List as an ItemsControl -->
            <ItemsControl x:Name="GamesList" Margin="10,5" Background="#2A2A2A" MinHeight="350" >
                <ItemsControl.ItemsSource>
                    <Binding Path="Games" />
                </ItemsControl.ItemsSource>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding Name}" Click="GameItem_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" BorderThickness="0" Padding="10">
                                        <TextBlock Text="{Binding Name}" Foreground="White"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#333" />
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#666" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>


            </ItemsControl>

        </StackPanel>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Game Details -->
            <Grid Grid.Row="1" Margin="0,10,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <!-- Game Image -->
                    <ColumnDefinition Width="*"/>
                    <!-- Game Info -->
                </Grid.ColumnDefinitions>

                <Image x:Name="GameImage" Width="250" Height="300" Stretch="Uniform" Grid.Column="0" Margin="10"/>

                <StackPanel x:Name="spGameData" Visibility="Hidden" Grid.Column="1" Margin="10" VerticalAlignment="Center">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="150">
                        <TextBlock x:Name="GameDescription" TextWrapping="Wrap" Foreground="White" FontSize="14" Margin="5" VerticalAlignment="Bottom"/>
                    </ScrollViewer>
                    <TextBlock Text="Release Date:" Foreground="Gray" Margin="5"/>
                    <TextBlock x:Name="tbReleaseDate" Foreground="White" Margin="5"/>
                    <TextBlock Text="Developer:" Foreground="Gray" Margin="5"/>
                    <TextBlock x:Name="tbDeveloper" Foreground="White" Margin="5"/>
                    <TextBlock Text="Publisher:" Foreground="Gray" Margin="5"/>
                    <TextBlock x:Name="tbPublisher" Foreground="White" Margin="5"/>
                    <TextBlock Text="Playtime:" Foreground="Gray" Margin="5"/>
                    <TextBlock x:Name="tbPlaytime" Foreground="White" Margin="5"/>
                    <TextBlock Text="Rating:" Foreground="Gray" Margin="5"/>
                    <TextBlock x:Name="tbRating" Foreground="White" Margin="5"/>
                </StackPanel>
            </Grid>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button x:Name="LaunchButton" Content="Launch" Click="LaunchButton_Click" Margin="5" Padding="10" Background="#3A8DFF" Foreground="White"/>
                <Button Content="Uninstall" Click="UninstallButton_Click" Margin="5" Padding="10" Background="#FF5733" Foreground="White"/>
                <Button x:Name="DownloadButton" Content="Download" Click="DownloadButton_Click" Margin="5" Padding="10" Background="#33C63A" Foreground="White"/>
            </StackPanel>

            <!-- Progress Bar -->
            <ProgressBar x:Name="ProgressBar" Minimum="0" Maximum="100" Grid.Row="3" Height="10" Visibility="Hidden" Background="#444" Margin="10"/>
        </Grid>
    </Grid>
</Window>
