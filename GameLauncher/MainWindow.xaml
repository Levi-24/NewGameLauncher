<Window x:Class="GameLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Launcher" Height="500" Width="800">
    <Grid>
        <ListBox Name="lstGames" HorizontalAlignment="Left" Width="500" Margin="10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" Width="200"/>
                        <Button Content="Launch" Click="Launch_Click" Margin="5"/>
                        <Button Content="Download/Update" Click="DownloadUpdate_Click" Margin="5"/>
                        <Button Content="Uninstall" Click="Uninstall_Click" Margin="5"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Content="Logout" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="100" Click="Logout_Click" Margin="10"/>
    </Grid>
</Window>
